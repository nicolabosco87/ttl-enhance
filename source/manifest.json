{
  "__chrome|opera|edge__manifest_version": 3,
  "__firefox__manifest_version": 2,

  "name": "TTL Enhance",
  "version": "1.0.5",

  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "Enhance TurnTable Live",
  "homepage_url": "https://github.com/nicolabosco87/ttl-enhance",
  "short_name": "TTLenhance",

  "permissions": ["activeTab", "storage"],

  "__chrome|opera|edge__content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "__firefox__content_security_policy": "script-src 'self'; object-src 'self'",

  "__chrome|firefox__author": "nicolabosco87",
  "__opera__developer": {
    "name": "nicolabosco87"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "{b9752293-d8d4-4e26-8f7c-f174e220eb03}"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "content_scripts": [
    {
      "matches": ["https://tt.live/*"],
      "js": ["js/contentScript.bundle.js"],
      "css": ["css/contentScript.css"]
    }
  ]
}
